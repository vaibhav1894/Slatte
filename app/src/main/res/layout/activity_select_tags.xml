<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:paddingBottom="20dp"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activity.SelectExpertiseActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/colorBackgroundLogin">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_left"/>

        <com.slatte.vaibhav.slatte.customtext.CustomTextViewLight
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:text="Done"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="select_tags_done"/>

    </RelativeLayout>

    <View
        android:background="#535353"
        android:layout_height="1dp"
        android:layout_width="match_parent"/>

    <com.slatte.vaibhav.slatte.customtext.CustomTextViewLight
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"
        android:textColor="@color/text_color_1"
        android:textSize="18sp"
        android:text="Tag Your Sujects"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_35"
        android:background="@drawable/shape_background_button_3"
        android:layout_marginHorizontal="@dimen/size_15">

        <com.slatte.vaibhav.slatte.customtext.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:background="@android:color/transparent"
            android:hint="Start typing your Subjects"
            android:textColor="@color/text_color_1"
            android:textColorHint="@color/text_color_1"
            android:textSize="@dimen/size_12"
            android:gravity="center"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/size_15"
        android:orientation="vertical">

        <com.slatte.vaibhav.slatte.customtext.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maths"
            android:textSize="@dimen/size_14"
            android:textColor="@color/text_color_1"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_border_text_color"
            android:paddingHorizontal="@dimen/size_8"
            android:paddingVertical="@dimen/size_3"/>
        <com.slatte.vaibhav.slatte.customtext.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="@dimen/size_14"
            android:textColor="@color/text_color_1"
            android:layout_marginTop="@dimen/size_8"
            android:background="@drawable/shape_border_text_color"
            android:paddingHorizontal="@dimen/size_8"
            android:paddingVertical="@dimen/size_3"/>
        <com.slatte.vaibhav.slatte.customtext.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biology"
            android:textSize="@dimen/size_14"
            android:textColor="@color/text_color_1"
            android:layout_marginTop="@dimen/size_8"
            android:paddingHorizontal="@dimen/size_8"
            android:paddingVertical="@dimen/size_3"/>
        <com.slatte.vaibhav.slatte.customtext.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="@dimen/size_14"
            android:textColor="@color/text_color_1"
            android:layout_marginTop="@dimen/size_8"
            android:paddingHorizontal="@dimen/size_8"
            android:paddingVertical="@dimen/size_3"/>
        <com.slatte.vaibhav.slatte.customtext.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physics"
            android:textSize="@dimen/size_14"
            android:textColor="@color/text_color_1"
            android:layout_marginTop="@dimen/size_8"
            android:paddingHorizontal="@dimen/size_8"
            android:paddingVertical="@dimen/size_3"/>
        <com.slatte.vaibhav.slatte.customtext.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chemistry"
            android:textSize="@dimen/size_14"
            android:textColor="@color/text_color_1"
            android:layout_marginTop="@dimen/size_8"
            android:background="@drawable/shape_border_text_color"
            android:paddingHorizontal="@dimen/size_8"
            android:paddingVertical="@dimen/size_3"/>
        <com.slatte.vaibhav.slatte.customtext.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geography"
            android:textSize="@dimen/size_14"
            android:textColor="@color/text_color_1"
            android:layout_marginTop="@dimen/size_8"
            android:paddingHorizontal="@dimen/size_8"
            android:paddingVertical="@dimen/size_3"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingVertical="@dimen/size_15">

            <com.slatte.vaibhav.slatte.customtext.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If the suject is missing in the list, jyst type\nthe suject to add them"
                android:textSize="@dimen/size_14"
                android:textColor="@color/text_color_1"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:paddingHorizontal="@dimen/size_8"
                android:paddingVertical="@dimen/size_3"
                android:layout_marginHorizontal="@dimen/size_15"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>